---
import Navbar from "../components/navbar.astro";
import Footer from "../components/footer.astro";
---

<html lang="en" data-theme="main">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Pricing & Packages | All√¥ Chef</title>
		<link href="/styles/output.css" rel="stylesheet" />
		<script
			src="https://kit.fontawesome.com/d1c56b39df.js"
			crossorigin="anonymous"></script>
	</head>
	<body class="min-h-screen bg-base-300">
		<Navbar />

		<section class="container mx-auto px-4 py-16 text-center max-w-4xl">
			<h1 class="text-5xl font-bold text-neutral mb-4">Prices & Packages</h1>
			<p class="text-xl text-gray-700 mb-2">
				No contracts. Cancel anytime. Covers up to 2 adults.
			</p>
		</section>

		<section class="bg-white py-16">
			<div class="container mx-auto px-4 max-w-4xl">
				<div class="flex justify-center">
					<div class="p-8 bg-base-100 rounded-3xl shadow-xl flex flex-col max-w-lg w-full">
						<h2 class="text-2xl font-bold text-primary mb-4">Comprehensive service package from A to Z</h2>
						<div class="flex-grow text-gray-700 mb-6">
							<ul class="space-y-3">
								<li class="flex items-start space-x-3">
									<i class="fas fa-check text-primary mt-1"></i>
									<span>Grocery shopping list that saves you time</span>
								</li>
								<li class="flex items-start space-x-3">
									<i class="fas fa-check text-primary mt-1"></i>
									<span>Seasonal, healthy-delicious meal ingredients</span>
								</li>
							</ul>
						</div>
						<p class="text-4xl font-extrabold text-neutral mb-6">$950</p>
						<a href="/contact" class="btn btn-primary mt-auto">Book Now</a>
					</div>
				</div>
			</div>
		</section>

		<section
			class="container mx-auto px-4 py-12 max-w-4xl text-center space-y-4 text-gray-600"
		>
			<p>
				Chef David serves Tasman area: Motueka, Tasman, Moutere, Brightwater,
				Richmond. Nelson deliveries incur a fuel fee.
			</p>
		</section>

		<section class="text-center py-12 bg-primary">
			<h3 class="text-3xl font-bold text-white mb-4">
				Ready to simplify your week?
			</h3>
			<a href="/contact" class="btn btn-neutral btn-lg px-12 py-4">
				Get Started
			</a>
		</section>

		<Footer />
	</body>
</html>
